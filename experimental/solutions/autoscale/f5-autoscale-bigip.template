          "Label": {
            "default": "NETWORKING CONFIGURATION"
          },
          "Parameters": [
            "vpc",
            "availabilityZones",
            "subnets",
            "bigipSecurityGroup",
            "bigipElasticLoadBalancer"
          ]
        },
        {
          "Label": {
              "default": "INSTANCE CONFIGURATION"
            },
          "Parameters": [
            "keyName",
            "sshLocation",
            "instanceType",
            "performanceType",
            "throughput",            
            "adminPassword",
            "managementGuiPort",
            "timezone",
            "ntpServer"
